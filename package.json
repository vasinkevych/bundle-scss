{
  "name": "bundle-scss",
  "version": "1.3.4",
  "description": "Bundling SCSS files to one bundled file.",
  "license": "MIT",
  "main": "dist/index.js",
  "author": "Vitalii <vasinkevych@gmail.com> (https://github.com/vasinkevych)",
  "bugs": "https://github.com/vasinkevych/bundle-scss/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasinkevych/bundle-scss"
  },
  "scripts": {
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"./**/*.{ts, js}\"",
    "bin": "tsc -t ES6 --moduleResolution node ./src/bin/bundle-scss.ts --outFile ./dist/bin/bundle-scss",
    "build": "tsc -p . --newLine lf && npm run bin && npm run prettier",
    "test": "npm run build && _mocha"
  },
  "bin": {
    "bundle-scss": "./dist/bin/bundle-scss.js"
  },
  "types": "@types/index.d.ts",
  "dependencies": {
    "@types/make-dir": "^1.0.3",
    "commander": "^2.14.1",
    "fancy-log": "^1.3.2",
    "globby": "^8.0.1",
    "make-dir": "^1.3.0",
    "rimraf": "^2.6.2"
  },
  "keywords": [
    "scss",
    "bundle",
    "concatenate",
    "concat",
    "node",
    "sass",
    "join",
    "themes",
    "build themes separately",
    "recursive concatenate sass",
    "angular 6+",
    "angularjs",
    "ng-packagr build themes",
    "react",
    "recursive concatenate scss"
  ],
  "devDependencies": {
    "@types/core-js": "2.5.0",
    "@types/globby": "8.0.0",
    "@types/node": "10.12.5",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "core-js": "2.5.7",
    "mocha": "5.2.0",
    "prettier": "1.15.2",
    "typescript": "3.3.1"
  },
  "engines": {
    "node": ">=6"
  }
}
